# ============================================
# ShopWave Backend â€” Environment Variables
# Copy to .env and fill in real values
# ============================================

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Development

# Database (SQL Server)
ConnectionStrings__DefaultConnection=Server=(localdb)\MSSQLLocalDB;Database=ShopWaveDb;Trusted_Connection=True;TrustServerCertificate=True;

# JWT Authentication
Jwt__Key=CHANGE_ME_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS
Jwt__Issuer=ShopWave
Jwt__Audience=ShopWave
Jwt__AccessTokenMinutes=30
Jwt__RefreshTokenDays=7

# CORS
Cors__AllowedOrigins=http://localhost:5173,http://localhost:3000

# Payments
Payments__DefaultProvider=stripe
Payments__Stripe__WebhookSecretPlaceholder=whsec_placeholder_change_me
Payments__Paymob__WebhookSecretPlaceholder=paymob_webhook_secret_placeholder

# COD Settings
Cod__MaxOrderTotal=5000
Cod__AllowedCities=Cairo,Alexandria,Giza,Luxor,Aswan

# Storage
Storage__Provider=local
Storage__CdnBaseUrl=

# Rate Limiting
RateLimiting__LoginPermitLimit=5
RateLimiting__LoginWindowSeconds=60
RateLimiting__GeneralPermitLimit=100
RateLimiting__GeneralWindowSeconds=60
RateLimiting__ReviewPermitLimit=2
RateLimiting__ReviewWindowSeconds=60

# Logging (Serilog)
Logging__MinimumLevel=Information
Logging__LogFilePath=logs/shopwave-.log

# Features
Features__EnableRedis=false
Redis__ConnectionString=localhost:6379

# Observability
Observability__SentryDsn=
